pipeline{
    agent any
    parameters{
        string(name: 'name', defaultName: 'Santi')
        choice(name: 'city', choice: ['Delhi','Kolkata','Mumbai'])
        boolean(name: 'married')
    }
    stages{
        stage('one'){
            steps{
                echo "${params.name}"
                echo "${params.city}"
                echo "${params.married}"
            }
        }
    }
}