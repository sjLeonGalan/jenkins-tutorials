pipeline{
    agent any
    parameters{
        string(name: 'name', defaultName: 'Santi')
        choice(name: 'city', choice: ['Delhi','Kolkata','Mumbai'])
        booleanParam(name: 'married', defaultValue: 'true')
    }
    stages{
        stage('one'){
            steps{
                echo "${params.name}"
                echo "${params.city}"
                echo "${params.married}"
            }
        }
    }
}